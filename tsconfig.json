{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts",
    "*.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "aegis_client/**/*.ts",
    "aegis_server/**/*.ts",
    "orchestrator/**/*.ts",
    "dsl/**/*.ts",
    "lib/**/*.ts",
    "types/**/*.d.ts"
  ]
}
